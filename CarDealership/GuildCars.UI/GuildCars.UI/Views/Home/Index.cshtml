@model GuildCars.UI.Models.HomepageVM
@{
    ViewBag.Title = "Home Page";
}

    <div class="row">
        <div class="col-md-12">
            @if (Model.Specials.Any())
            {
                <div name="carousel">
                    <div id="homeCarousel" class="carousel-slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < Model.Specials.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <li data-target="#homeCarouselIndecators" data-slide-to="@i" class="active"></li>
                                }
                                else
                                {
                                    <li data-target="#homeCarouselIndecators" data-slide-to="@i"></li>

                                }

                            }
                        </ol>
                        <div class="carousel-inner">
                            @foreach (var special in Model.Specials)
                            {
                                if (special == Model.Specials[0])
                                {
                                    <div class="carousel-item active" style="max-height: 400px; width:100%">
                                        <div class="carousel-caption">
                                            <h2 style="color:white">@special.SpecialName</h2>
                                        </div>
                                        <a href="~/Home/Specials">
                                            <img class="d-block w-100" src="~/Images/Specials/@special.ImageFileName" alt="@special.SpecialName-image" />
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item" style="max-height: 400px; max-width:100%">

                                        <div class="carousel-caption md-none d-md-block">
                                            <h2 style="color:white">@special.SpecialName</h2>
                                        </div>
                                        <a href="~/Home/Specials">

                                            <img class="d-block w-100" src="~/Images/Specials/@special.ImageFileName" alt="@special.SpecialName-image">
                                        </a>
                                    </div>
                                }


                            }
                            <a class="carousel-control-prev" href="#homeCarouselIndecators" role="button" data-slide="prev" onclick="$('#homeCarousel').carousel('prev')">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#homeCarouselIndecators" role="button" data-slide="next" onclick="$('#homeCarousel').carousel('next')">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                    </div>
                </div>
            }
            else
            {
                <div class="jumbotron" style="text-align:center">
                    <h1>Welcome to Ride Boiz!</h1>
                    <p>The finest dealership in all the land</p>
                </div>
            }
        </div>
    </div>

    <hr />
    <div class="container">
        <div class="row">
            @if (Model.FeaturedVehicles.Any())
            {
                foreach (var v in Model.FeaturedVehicles)
                {
                    <div class="col-md-4" style="margin-bottom:10px">
                        <a href="~/Inventory/Details/@v.VIN" class="btn btn-outline-primary btn-block" id="featuredVehicle">
                            <img src="~/Images/Vehicles/@v.ImageFileName" alt="@v.ImageFileName" class="img-thumbnail" style="max-width:325px; max-height:200px" />
                            <div class="align-bottom">
                                <p style="font-weight:bold">@v.Year @v.Model.Make.MakeName @v.Model.ModelName</p>
                                <p style="font-weight:bold">$@v.SalePrice</p>
                            </div>     
                        </a>
                    </div>
                }
            }
            else
            {
                <p>No Featured Vehicles</p>
            }
        </div>
    </div>

