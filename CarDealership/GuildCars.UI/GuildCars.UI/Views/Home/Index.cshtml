@model GuildCars.UI.Models.HomepageVM
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <div name="carousel">
            <div id="homeCarousel" class="carousel-slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Specials.Count; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#homeCarouselIndecators" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#homeCarouselIndecators" data-slide-to="@i"></li>

            }

        }
                </ol>
                <div class="carousel-inner">
                    @foreach (var special in Model.Specials)
                {
                    if (special == Model.Specials[0])
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/Images/Specials/Carousel/c-@special.ImageFileName" alt="@special.SpecialName-image">
                            <div class="carousel-caption">
                                <h5>@special.SpecialName</h5>
                            </div>
                        </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/Specials/Carousel/c-@special.ImageFileName" alt="@special.SpecialName-image">
                        <div class="carousel-caption md-none d-md-block">
                            <h5>@special.SpecialName</h5>
                        </div>
                    </div>
            }


        }
                    <a class="carousel-control-prev" href="#homeCarouselIndecators" role="button" data-slide="prev" onclick="$('#homeCarousel').carousel('prev')">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#homeCarouselIndecators" role="button" data-slide="next" onclick="$('#homeCarousel').carousel('next')">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>
    
<hr />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @foreach (var v in Model.FeaturedVehicles)
            {
                <button id="@v.VIN" name="featuredVehicle" onclick="featuredDetails">
                    <img src="~/Images/Vehicles/@v.ImageFileName" alt="@v.ImageFileName" />
                    <p>@v.Year @v.MakeName @v.ModelName</p>
                    <p>$@v.SalePrice</p>
                </button>
            }
        </div>
    </div>

</div>
