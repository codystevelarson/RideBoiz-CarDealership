@model GuildCars.UI.Models.SpecialVM

@{
    ViewBag.Title = "Specials";
}

<div class="container">

    <h2>Specials</h2>
    <hr />
    @if (Model.Specials.Any())
    {
        foreach (var special in Model.Specials.OrderByDescending(s => s.SpecialId))
        {
            <div class="card" style="padding:15px; border-color: deepskyblue; background-image: url(/Images/Specials/@special.ImageFileName)">

                <div class="row" style="background-color: rgba(255, 255, 255, 0.75); padding:5px; " >

                    <div class="col-md-6 offset-6" >
                        <div class="row">
                            <div class="col-sm-10">
                                <h2 style="text-align: center">@special.SpecialName</h2>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <p style="text-align:center;font-size:16px; font-weight:400">@special.Description</p>
                        </div>

                    </div>
                </div>
            </div>
            <br />
        }
    }


</div>

